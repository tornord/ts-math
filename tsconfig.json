{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": false,
    "target": "es6",
    "typeRoots": ["./@types", "./node_modules/@types"],
    "types": ["node", "mocha"]
  },
  "include": ["src", "@types"],
  "exclude": ["src/**/*test.ts", "node_modules"]
}
